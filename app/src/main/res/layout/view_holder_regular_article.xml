<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_holder_regular_parent"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

    <android.support.v7.widget.AppCompatImageView
            android:layout_width="100dp"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/view_holder_regular_thumbnail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"
            tools:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"/>

    <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/textPrimaryColor"
            tools:text="BBC News"
            android:id="@+id/view_holder_regular_article_title"
            app:layout_constraintStart_toEndOf="@+id/view_holder_regular_thumbnail"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/placeholder"
            tools:text="Apr 19, 2019 by William Gouvea"
            android:id="@+id/view_holder_regular_article_date_and_author"
            app:layout_constraintStart_toStartOf="@+id/view_holder_regular_article_title"
            android:layout_marginEnd="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@+id/view_holder_regular_article_title"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="4dp"/>

</android.support.constraint.ConstraintLayout>