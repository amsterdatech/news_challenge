<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_holder_headline_parent"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:fitsSystemWindows="true"
        android:focusable="true">

    <android.support.v7.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="H,4:3"
            android:foreground="#60000000"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:background="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/view_holder_headline_thumbnail"
            app:layout_constraintHorizontal_bias="1.0"/>

    <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="BBC News"
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/view_holder_headline_article_title"
            app:layout_constraintBottom_toTopOf="@+id/view_holder_headline_article_date_and_author"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="@+id/view_holder_headline_thumbnail"
            app:layout_constraintVertical_bias="0.94"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"/>

    <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            tools:text="Apr 19, 2019 by William Gouvea"
            android:id="@+id/view_holder_headline_article_date_and_author"
            app:layout_constraintStart_toStartOf="@+id/view_holder_headline_article_title"
            app:layout_constraintTop_toBottomOf="@+id/view_holder_headline_article_title"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/view_holder_headline_thumbnail"
    />

</android.support.constraint.ConstraintLayout>